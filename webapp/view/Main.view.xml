<mvc:View
	controllerName="com.michelsplayground.typescriptExampleApp.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

	<MessagePage
		title="Hello my friends"
		text="{i18n>appTitle}"
		icon="sap-icon://accept"
		id="page"
		description="{i18n>appDescription}">
		<buttons>
			<Button
				text="{i18n>btnText}"
				press="sayHello" />
		</buttons>
	</MessagePage>

</mvc:View>